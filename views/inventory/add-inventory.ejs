<div class="add_class">
    <% if (title) { %>
      <h1><%= title %></h1>
    <% } else {
      res.redirect('/');
    } %>
  
  <%- messages() %>

  <fieldset>
    <form id="addInventoryForm" action="/inv/add-inventory" method="post" onsubmit="return validateForm()">
        <label for="classification">Classification:</label>
        <select id="inv_classification" name="classification" required>
          <!-- Include options dynamically populated from the server (passed from controller) -->
          <% classifications.rows.forEach((classification) => { %>
            <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
          <% }) %>
        </select>
      
        <label for="make">Make:</label>
        <input type="text" id="inv_make" name="make" required>
      
        <label for="model">Model:</label>
        <input type="text" id="inv_model" name="model" required>
      
        <label for="description">Description:</label>
        <textarea id="inv_description" name="description" required></textarea>
      
        <label for="imagePath">Image Path:</label>
        <input type="text" id="inv_imagePath" name="imagePath" required>
      
        <label for="thumbnailPath">Thumbnail Path:</label>
        <input type="text" id="inv_thumbnailPath" name="thumbnailPath" required>
      
        <label for="price">Price:</label>
        <input type="number" id="inv_price" name="price" required>
      
        <label for="year">Year:</label>
        <input type="number" id="inv_year" name="year" required>
      
        <label for="miles">Miles:</label>
        <input type="number" id="inv_miles" name="miles" required>
      
        <label for="color">Color:</label>
        <input type="text" id="color" name="inv_color" required>
      
        <button type="submit">Add Vehicle</button>
      </form>
  </fieldset>
  </div>