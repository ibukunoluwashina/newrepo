<!-- management.ejs -->
<div class="vehicle_invent">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/');
  } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
   </ul>
  <% } %>

  <% if (accountData.account_type === "Employee" || accountData.account_type ==="Admin") { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You're logged in!</p>
  <h3>Inventory Management</h3>
  <!-- Display additional content for "Employee" or "Admin" account types -->
  <p><a href="/inv">Manage Inventory </a></p>
 
<% } else { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You're logged in!</p>
 <!-- Display the "Update Account Information" link for all clients -->
 <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
<% } %>

</div>